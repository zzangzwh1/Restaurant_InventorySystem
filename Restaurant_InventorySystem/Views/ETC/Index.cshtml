@model IEnumerable<Etc>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary"> ETC</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Etc" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New List</a>
        </div>
    </div>
    <br />



    <table class="table table-bordered table-striped" style="width:100%">
        <Thead>
            <tr>
                
                <th style="text-align:center">Product Name</th>
                <th style="text-align:center">Product Price</th>
                <th style="text-align:center">Product Weight</th>
                <th></th>
                <th></th>
            <tr />
        </Thead>
        <tbody>

            @foreach (var value in Model)
            {
                <tr>
                   
                    <td width="20%" class="_gfsTD">@value.ProductName</td>
                    <td width="20%" class="_gfsTD">$ @value.Price</td>
                    <td width="20%" class="_gfsTD">@value.Weight KG</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Etc" asp-action="Edit" asp-route-id="@value.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Etc" asp-action="Delete" asp-route-id="@value.Id" class="btn btn-danger mx-2"><i class="bi bi-archive"></i>Delete</a>
                        </div>
                    </td>


                </tr>
            }

        </tbody>

    </table>
</div>